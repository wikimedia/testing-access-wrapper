{
	"name": "wikimedia/testing-access-wrapper",
	"description": "A simple helper class to access non-public elements of a class when testing.",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/Testing-access-wrapper",
	"authors": [
		{
			"name": "Adam Roses Wight",
			"email": "awight@wikimedia.org"
		},
		{
			"name": "Brad Jorsch",
			"email": "bjorsch@wikimedia.org"
		},
		{
			"name": "GergÅ‘ Tisza",
			"email": "gtisza@wikimedia.org"
		}
	],
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/"
		]
	},
	"require": {
		"php": ">=5.3.0"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"mediawiki/mediawiki-codesniffer": "16.0.0",
		"phpunit/phpunit": "4.8.36",
		"mediawiki/minus-x": "0.3.1"
	},
	"scripts": {
		"lint": "parallel-lint . --exclude vendor",
		"phpcs": "phpcs -p -s",
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"phpunit": "phpunit $PHPUNIT_ARGS",
		"coverage": "phpunit --coverage-html coverage $PHPUNIT_ARGS",
		"test": [
			"@composer lint",
			"@composer phpcs",
			"@composer phpunit",
			"minus-x check ."
		]
	}
}
